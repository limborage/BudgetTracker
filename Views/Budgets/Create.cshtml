@model BudgetTracker.Models.Budget

@{
    ViewData["Title"] = "Create New Budget Group";
}

<h1>Create</h1>

<h4>Budget</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BudgetStartDate" class="control-label"></label>
                <input asp-for="BudgetStartDate" type="date" class="form-control" />
                <span asp-validation-for="BudgetStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BudgetEndDate" class="control-label"></label>
                <input asp-for="BudgetEndDate" type="date" class="form-control" />
                <span asp-validation-for="BudgetEndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
